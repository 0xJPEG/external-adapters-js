{
  "description": "This is a fake adapter for testing, and should not be used as a template for adapters.",
  "endpointParameters": {
    "balance": {
      "addresses": {
        "description": "List of addresses to query.",
        "type": "list"
      },
      "confirmations": {
        "default": 4,
        "description": "Number of confirmations for transactions to add to balance calculation.",
        "type": "number"
      },
      "dataPath": {
        "default": "addresses",
        "description": "Path for balance data response.",
        "type": "string"
      }
    },
    "marketcap": {
      "base": {
        "default": "BTC",
        "description": "Base asset to query.",
        "type": "string"
      },
      "coinid": {
        "default": "1 (BTC)",
        "description": "ID of main coin.",
        "type": "number"
      },
      "quote": {
        "default": "USD",
        "description": "Quote asset to query.",
        "type": "string"
      },
      "referenceCurrencyUuid": {
        "default": "0",
        "description": "UUID of reference currency (meaningless input param).",
        "type": "number"
      },
      "resultPath": {
        "default": "marketcap",
        "description": "Path for marketcap data response.",
        "type": "string"
      }
    },
    "price": {
      "amount": {
        "description": "Amount of asset to query (meaningless input param).",
        "type": "number"
      },
      "base": {
        "default": "BTC",
        "description": "Base asset to query.",
        "type": "string"
      },
      "quote": {
        "default": "USD",
        "description": "Quote asset to query.",
        "type": "string"
      },
      "resultPath": {
        "default": "price",
        "description": "Path for price data response.",
        "type": "string"
      }
    }
  },
  "properties": {
    "API_ENDPOINT": {
      "default": "https://test.api.endpoint.link",
      "description": "API Endpoint to use",
      "type": "string"
    },
    "CHAIN_ID": {
      "default": 1,
      "description": "Chain ID (`1 = Mainnet`, `2 = Testnet`, ...)",
      "type": "number"
    },
    "MODE": {
      "default": "sandbox",
      "description": "API Mode has `live` for live data, `sandbox` for development, and `test` for live-like environment testing",
      "enum": ["live", "sandbox", "test"],
      "type": "string"
    },
    "PRIVATE_KEY": {
      "description": "Private subscription key",
      "type": "string"
    },
    "RPC_URL": {
      "description": "RPC Endpoint to use",
      "type": "string"
    }
  },
  "required": ["PRIVATE_KEY", "RPC_URL"]
}
